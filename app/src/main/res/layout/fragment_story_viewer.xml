        app:layout_constraintBottom_toBottomOf="@id/current_story_items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/current_story_items"
        app:layout_constraintTop_toTopOf="@id/current_story_items" />

