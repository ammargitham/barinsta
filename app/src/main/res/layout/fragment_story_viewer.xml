    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/current_story_items_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/story_item_height" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBackward"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:icon="@drawable/exo_ic_skip_previous"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="@id/current_story_items"
        app:layout_constraintEnd_toStartOf="@id/current_story_items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/current_story_items" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/current_story_items"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnForward"
        app:layout_constraintStart_toEndOf="@id/btnBackward"
        app:layout_constraintTop_toBottomOf="@id/current_story_items_guide"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_story"
        tools:orientation="horizontal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnForward"
